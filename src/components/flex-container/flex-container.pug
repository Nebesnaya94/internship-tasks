                +flex-card('Шпунтовой замок').flex-container__item_blue
                +flex-card('Мостовой крепеж').flex-container__item_grey
                +flex-card('Профили для деформационных швов').flex-container__item_blue-light
            .flex-container__row.flex-container__row_3
