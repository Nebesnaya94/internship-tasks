mixin flex-container()
    section.flex-container
        // Your code here
        h3.flex-container__title
            span Комплексные&nbsp;
            |  предложения для мостостроения
        .flex-container__wrapper
            .flex-container__row.flex-container__row_1
                +flex-card('Мостовая сталь/Стальные конструкции мостов').flex-container__item_grey
