mixin spoiler(index)
	-
		const textData = [
			{title: "Постоянный количественный рост и сфера нашей активности", text: "требуют определения и уточнения систем массового участия. Не следует, однако забывать, что рамки и место обучения кадров представляет собой интересный эксперимент проверки форм развития."},
			{title: "Значимость этих проблем настолько очевидна,", text: "что начало повседневной работы по формированию позиции позволяет оценить значение новых предложений."},
			{title: "Повседневная практика показывает,", text: "что новая модель организационной деятельности позволяет оценить значение существенных финансовых и административных условий."},
			{title: "Дальнейшее развитие различных форм деятельности", text: "обеспечивает широкому кругу (специалистов) участие в формировании существенных финансовых и административных условий. С другой стороны начало повседневной работы по формированию позиции требуют от нас анализа форм развития. Равным образом консультация с широким активом в значительной степени обуславливает создание позиций, занимаемых участниками в отношении поставленных задач."},
			{title: "Задача организации,", text: "в особенности же постоянное информационно-пропагандистское обеспечение нашей деятельности способствует подготовки и реализации направлений прогрессивного развития. Равным образом новая модель организационной деятельности представляет собой интересный эксперимент проверки модели развития."},
		]
	- const item = textData[index]
	.spoiler.active&attributes(attributes)(data-component='spoiler')
		h2.spoiler__title.spoiler-title
			.spoiler-title__text= `${index+1}. ${item ? item.title : ''}`
			.spoiler-title__icon
		p.spoiler__description= item ? item.text : ''